.form
  max-width 400px
  width 100%

  &__label
    display block
    padding 5px 0
    width 100%

    &-item
      display inline-block
      vertical-align middle
      position relative
      width 60%

      &:first-child
        text-align left
        width 40%

  &__field
    padding 5px 10px
    width 100%

    &_error
      outline none
      box-shadow $border-error-shadow
      border-color $border-error-color

  &__group
    margin-bottom 10px

  &__checkbox-icon
    border 2px solid $default-border-color
    border-radius 2px
    cursor pointer
    display block
    height 15px
    width 15px

  &__checkbox
    opacity 0
    position absolute
    z-index -1
    width auto

    &_error + .form__checkbox-icon
      border-color $border-error-color

    &:checked + .form__checkbox-icon
      position relative

      &:before
        content '\2713';
        top -2px
        left 2px
        font-size 14px
        font-weight bold
        position absolute

  &__handler
    padding 10px 0

  &__btn
    margin-left 20px
    defaultBtn()

    &:first-child
      margin-left 0